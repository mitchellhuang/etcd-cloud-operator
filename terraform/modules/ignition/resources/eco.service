[Unit]
Description=ECO Container
After=podman.service
Requires=podman.service

[Service]
Restart=always
RestartSec=1
TimeoutStartSec=0
TimeoutStopSec=30min
StartLimitIntervalSec=0

ExecStartPre=-/usr/bin/podman stop eco
ExecStartPre=-/usr/bin/podman rm eco
ExecStart=/usr/bin/podman run --rm --name eco --net=host -v /var/lib/eco:/var/lib/eco -v /etc/eco:/etc/eco ${image} -config /etc/eco/config.yaml

[Install]
WantedBy=multi-user.target