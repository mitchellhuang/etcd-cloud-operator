[Unit]
Description=Node Exporter Container
After=podman.service
Requires=podman.service

[Service]
TimeoutStartSec=0
Restart=always
ExecStartPre=-/usr/bin/podman stop node-exporter
ExecStartPre=-/usr/bin/podman rm node-exporter
ExecStart=/usr/bin/podman run --rm --name node-exporter --net=host --pid=host quay.io/prometheus/node-exporter:v0.17.0

[Install]
WantedBy=multi-user.target
